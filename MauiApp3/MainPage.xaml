<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.18*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Button Text="Add Section" HorizontalOptions="StartAndExpand"  MaximumHeightRequest="60" MinimumWidthRequest="150" Margin="15 0 0 10"></Button>

        <ScrollView  Grid.Row="1" Grid.RowSpan="1" Grid.ColumnSpan="2" Margin="5 0 0 0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <!-- Add more ColumnDefinitions here as needed -->
            </Grid.ColumnDefinitions>

            <!-- First Frame -->
            <Frame  Grid.Row="0" Grid.Column="0" WidthRequest="{Binding FrameWidth}" Margin="5">
                <Grid>
                    <Image Source="Resources/Images/demo_img_1.png" Aspect="AspectFill" HorizontalOptions="FillAndExpand" Margin="10" />
                    <Label Text="Stream 1" TextColor="White" VerticalOptions="End" HorizontalOptions="Start"  />
                </Grid>
            </Frame>

            <!-- Second Frame -->
            <Frame  Grid.Row="0" Grid.Column="1" WidthRequest="{Binding FrameWidth}" Margin="5">
                <Grid>
                    <Image Source="Resources/Images/demo_img_2.png" Aspect="AspectFill" />
                    <Label Text="Stream 2" TextColor="White" VerticalOptions="End" HorizontalOptions="Start"  />
                </Grid>
            </Frame>

                <!-- Third Frame -->
                <Frame  Grid.Row="1" Grid.Column="0" WidthRequest="{Binding FrameWidth}" Margin="5">
                    <Grid>
                        <Image Source="Resources/Images/demo_img_3.png" Aspect="AspectFill" HorizontalOptions="FillAndExpand" Margin="10" />
                        <Label Text="Stream 1" TextColor="White" VerticalOptions="End" HorizontalOptions="Start"  />
                    </Grid>
                </Frame>

                <!-- Fourth Frame -->
                <Frame  Grid.Row="1" Grid.Column="1" WidthRequest="{Binding FrameWidth}" Margin="5">
                    <Grid>
                        <Image Source="Resources/Images/demo_img_4.png" Aspect="AspectFill" />
                        <Label Text="Stream 2" TextColor="White" VerticalOptions="End" HorizontalOptions="Start"  />
                    </Grid>
                </Frame>

                <!-- Add more Frames here as needed -->
        </Grid>
    </ScrollView>

    </Grid>




